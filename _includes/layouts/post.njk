---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
<link
			href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css"
			rel="stylesheet"
		/>
<link rel="stylesheet" href="{{ '/assets/css/prism-diff.css' | url }}">
<h1 class="font-bold text-xl">{{ title }}</h1>

<ul class="post-metadata italic mb-8 flex flex-wrap">
	<li class="italic pr-[10px]">
		<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate("yyyy-MM-dd hh:mm:ss z") }}</time>
	</li>
	{%- for tag in tags | filterTagList %}
		{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<li class="pr-[10px]">
			<a href="{{ tagUrl }}" class="post-tag link">#{{ tag }}</a>
			{%- if not loop.last %}, {% endif %}
		</li>
	{%- endfor %}
</ul>
<div id="post-content" class="mb-8 resume-border pb-[20px] text-justify">
	<article class="prose lg:prose-base max-w-none">
		{{ content | safe }}
	</article>
</div>

{%- if collections.posts %}
	{%- set previousPost = collections.posts | getPreviousCollectionItem %}
	{%- set nextPost = collections.posts | getNextCollectionItem %}
	{%- if nextPost or previousPost %}
		<ul class="links-nextprev pt-[10px]">
			{%- if previousPost %}
				<li class="links-nextprev-prev float-left pb-[10px]">← Previous<br>
					<a class="link" href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
				</li>
			{% endif %}
			{%- if nextPost %}
				<li class="links-nextprev-next float-right pb-[10px]">Next →<br>
					<a class="link" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
				</li>
			{% endif %}
		</ul>
	{%- endif %}
{%- endif %}